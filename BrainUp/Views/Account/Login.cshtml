@model LoginModel
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Account/_LoginLayout.cshtml";
}


<form id="account" method="post" asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating form-register-element">
        <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="@Model.Email" class="form-label"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-floating form-register-element">
        <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <label asp-for="@Model.Password" class="form-label"></label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="form-register-element">
        <div class="checkbox">
            <label asp-for="@Model.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="@Model.RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
    </div>
    <div class="form-floating form-register-element">
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-register">Log in</button>
    </div>
    <div class="form-floating form-register-element text-small">
        Don't have an account?
        <a style="color: #354D8A;" asp-controller="Account" asp-action="Register">Create one</a>
    </div>
    <div class="form-floating form-register-element text-small">
        Do you want to create a course?
        <a style="color: #354D8A;" asp-controller="Account" asp-action="RegisterTeacher">Create teacher account</a>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
