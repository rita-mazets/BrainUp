@model Menu
<form asp-action="Add" asp-controller="Menu" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-register-element">
        <label asp-for="@Model.Name" class="text-inter text-small">Menu</label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-floating form-register-element" hidden>
        <input hidden asp-for="@Model.CourceId" class="form-control" value="@Model.CourceId" />
        <label hidden asp-for="@Model.CourceId" class="form-label"></label>
        <span hidden asp-validation-for="@Model.CourceId" class="text-danger"></span>
    </div>
   <div class="form-floating form-register-element">
        <input type="submit" value="Create" class="btn btn-primary btn-register" />
    </div>
</form>