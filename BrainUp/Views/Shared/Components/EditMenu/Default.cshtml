@model Menu

<form asp-action="Update" asp-controller="Menu" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="@Model.CourceId" class="form-control" />
    <div class="form-group form-register-element">
        <label asp-for="Id" class="text-inter text-small">Menu</label>
        <select asp-for="Id" class="form-control" asp-items="@ViewBag.AvailableMenu"></select>
    </div>
    <div class="form-group form-register-element mt-3">
        <label asp-for="@Model.Name" class="text-inter text-small"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-floating form-register-element">
        <input type="submit" value="Edit" class="btn btn-primary btn-register" />
    </div>
</form>
