@model ContentViewModel

<form  method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="@Model.ContentId">
    <input hidden asp-for="@Model.SubMenuId">
    <div class="form-group form-register-element">
        <label asp-for="@Model.Name" class="text-inter text-small"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group form-register-element">
        <label asp-for="@Model.Text" class="text-inter text-small"></label>
        <textarea asp-for="@Model.Text" class="form-control" style="height:26vh;"></textarea>
        <span asp-validation-for="@Model.Text" class="text-danger"></span>
    </div>

    <div class="row form-input-element">
        <div class="col justify-content-start">
            <div class="form-group form-register-element">
                <input asp-action="Update" asp-controller="Content" type="submit" value="Save" class="btn btn-primary btn-register" />
            </div>
        </div>
        <div class="col justify-content-start">
            <div class="form-group form-register-element">
                <input asp-action="Delete" asp-controller="Content" type="submit" value="Delete" class="btn btn-primary btn-register" />
            </div>
        </div>
    </div>
</form>