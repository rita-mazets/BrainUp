@model BrainUp.Models.SubMenu

<form asp-action="Add" asp-controller="Submenu" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-register-element">
        <label asp-for="MenuId" class="text-inter text-small">Menu</label>
        <select asp-for="MenuId" class="form-control" asp-items="@ViewBag.AvailableMenu"></select>
    </div>
    <div class="form-group form-register-element">
        <label asp-for="@Model.Name" class="text-inter text-small"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-floating form-register-element">
        <input type="submit" value="Create" class="btn btn-primary btn-register" />
    </div>
</form>