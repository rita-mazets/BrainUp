@model Content

<form asp-action="Delete" asp-controller="Content" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group form-register-element">
        <label asp-for="Id" class="text-inter text-small">Content</label>
        <select asp-for="Id" class="form-control" asp-items="@ViewBag.ContentMenu"></select>
    </div>


    <div class="form-floating form-register-element">
        <input type="submit" value="Delete" class="btn btn-primary btn-register" />
    </div>
</form>
