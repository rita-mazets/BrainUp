@page
@model BrainUp.Areas.Admin.Pages.Languages.IndexModel

@{
    ViewData["Title"] = "Languages";
}

<div class="text-welcome-register pt-3 p-lg-3 pr-3 pb-1">
    Languages
    <p class="mb-0">
        <a class="a-link text-small" asp-page="Create">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Language[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language[0].Symbol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Language) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td class="table-content-right">

                    <a asp-page="./Edit" asp-route-id="@item.Id" class="a-link">Edit</a>   
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="a-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
